            </materialDesign:Card>

        </Grid>
        <Grid HorizontalAlignment="Left" Height="55" VerticalAlignment="Top" Width="1027" Background="#FF374224" MouseLeftButtonDown="Grid_MouseLeftButtonDown"/>
        
    </Grid>
